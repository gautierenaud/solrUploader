{
    "manifest_version": 2,
    "name": "SolrSearch",
    "version": "1.0",
    "description": "Test to make a plugin that requests info to solr",
    "icons": {
        "48": "icons/search-48.png"
    },
    "permissions": ["notifications", "downloads", "tabs", "activeTab"],
    "background": {
        "scripts": ["background-script.js"]
    },
    "content_scripts": [{
        "css": ["content/floating_button/button.css"],
        "js": ["content/floating_button/button.js"],
        "matches": ["<all_urls>"]
    }],
    "browser_action": {
        "default_icon": "icons/search-32.png",
        "default_title": "SolrSearch",
        "default_popup": "popup/choose_page.html"
    },
    "web_accessible_resources": ["icons/save-32.png"]
}